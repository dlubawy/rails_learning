<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <% if signed_in? %>
            <%= link_to "private events", user_path(@current_user.id), id: "logo" %>
        <% else %>
            <%= link_to "private events", login_path, id: "logo" %>
        <% end %>
        <nav>
            <ul class="nav navbar-nav navbar-right">
                <% if !signed_in? %>
                    <li><%= link_to "Signup", '/users/new' %></li>
                    <li><%= link_to "Log in", login_path %></li>
                <% else %>
                    <li><%= link_to "New Event", new_event_path %></li>
                    <li><%= link_to "Logout as #{@current_user.name}", logout_path, method: "delete" %></li>
                <% end %>
            </ul>
        </nav>
    </div>
</header>
